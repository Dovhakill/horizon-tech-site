{% extends "base.html.j2" %}
{% block title %}L'Horizon Libre - Média Indépendant d'Actualité{% endblock %}
{% block content %}
    {% if articles %}
    <section id="hero">
        <h2 class="text-3xl font-bold mb-6 border-l-4 border-blue-800 pl-4">À la une</h2>
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 items-center">
            <div class="order-2 lg:order-1">
                <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mt-2 mb-4 leading-tight">{{ articles[0].title }}</h1>
                <p class="text-gray-500 text-sm mb-4">{{ articles[0].date_human }}</p>
                <a href="article/{{ articles[0].filename }}" class="inline-flex items-center text-blue-800 font-semibold group">Lire l'analyse <i data-feather="arrow-right" class="ml-2 w-4 h-4"></i></a>
            </div>
            <div class="order-1 lg:order-2">
                <a href="article/{{ articles[0].filename }}"><img src="{{ articles[0].image_url }}" alt="{{ articles[0].title }}" class="rounded-lg shadow-xl w-full h-auto object-cover article-featured-image"></a>
            </div>
        </div>
    </section>
    {% endif %}

    <section id="recent-articles" class="mt-16">
        <h2 class="text-3xl font-bold mb-8 border-l-4 border-blue-800 pl-4">Nos derniers articles</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            {% for article in articles[1:] %}
            <div class="bg-white rounded-lg shadow-md">
                <a href="article/{{ article.filename }}"><img src="{{ article.image_url }}" alt="{{ article.title }}" class="article-card-img"></a>
                <div class="p-6">
                    <h3 class="font-bold text-xl mt-2 mb-3">{{ article.title }}</h3>
                    <p class="text-gray-500 text-xs mb-3">{{ article.date_human }}</p>
                    <a href="article/{{ article.filename }}" class="text-sm font-semibold text-blue-800 hover:underline">Lire la suite</a>
                </div>
            </div>
            {% else %}
                {% if articles %}
                <p class="col-span-full">Revenez bientôt pour plus d'articles.</p>
                {% else %}
                <p class="col-span-full">Aucun article à afficher pour le moment.</p>
                {% endif %}
            {% endfor %}
        </div>
    </section>
{% endblock %}
